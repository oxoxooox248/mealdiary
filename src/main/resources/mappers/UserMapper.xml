<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.mealdiary.meal.UserMapper">
    <insert id="insUser">
        INSERT INTO
        t_user
        SET
            uid= #{uid},
            upw= #{upw},
            nm= #{nm},
            pic= #{pic}
    </insert>
    <select id="selUserByUid">
        SELECT
            iuser,
            upw,
            nm,
            pic
        FROM t_user
        WHERE uid= #{uid}
    </select>
</mapper>